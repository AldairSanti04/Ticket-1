<%- include("includes/header") %>

    <body>

        <%- include("includes/navbar") %>

        <h1 class="p-3 text-center">Presupuestos</h1>

        <div class="container">
            <div class="d-flex flex-row-reverse">
                <a href="/index/nuevo" class="btn text-center align-middle btn-outline-dark mt-4"><i class='bx bxs-plus-circle'></i></a>
            </div>
            
            <table class="table-bordered text-center table mt-5 caption-top align-middle">
                <thead class="table-success text-bold">
                    <tr>
                        <td scope="col">Id</td>
                        <td scope="col">Fecha de Creación</td>
                        <td scope="col">Proyecto</td>
                        <td scope="col">Versión</td>
                        <td scope="col">ACCIONES</td>
                    </tr>
                </thead>
                <tbody>
                <!-- foreach para recibir resultados de la tabla presupuestos -->
                <% results.forEach((presupuesto)=>{ %>
                    <tr>
                      <td>
                        <%= presupuesto.id %>
                      </td>
                      <td>
                        <%= presupuesto.createdAt %> 
                      </td>
                      <td>
                        <%= presupuesto.proyecto %>
                      </td>
                      <td>
                          <%= presupuesto.version %>
                        </td>
                      <!-- referencia a ruta editar y eliminar usuario-->
                      <td>
                        <a class="btn btn-outline-primary"><i class='bx bxs-edit'></i></a>
                        <a class="btn btn-outline-success ms-2 me-2"><i class='bx bxl-telegram'></i></a>
                        <a class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <%- include('includes/footer') %>