<header>
    <div class="container-fluid">
        <div class="row">
          <nav class="navbar navbar-expand-lg navbar-dark bg-light navegacion-color col-12">
            <a class="navbar-brand mx-5" href="/index"><i class='bx bx-paste'></i> Ticket 1</a>

            <div class="collapse navbar-collapse" id="navbarResponsive"></div>
            
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" id="userlink"><span id="UserName" class="text-bold">User Name</span></a>
              </li>
              <li class="nav-item">
                <a onclick="cerrarSesion()" class="btn btn-outline-light mx-5">Cerrar Sesi√≥n</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    <script>
        let loggeado = localStorage.getItem('dataUsuario')
        if(loggeado != null){
            sesionIniciada();
        }

        function sesionIniciada(){
            const usuario = document.getElementById("UserName");
            const linkuser = document.getElementById("userlink");
            usuario.innerHTML ="";
            let resultado = JSON.parse(localStorage.getItem('dataUsuario'));
            usuario.innerHTML = `${resultado.user}`;
            linkuser.setAttribute("href", `/usuario/${resultado.id}`);
        }

        function cerrarSesion(){
            localStorage.removeItem('dataUsuario');
            setTimeout(() => {
            window.location = '/login'
        }, 1500);
        }

    </script>
</header>


